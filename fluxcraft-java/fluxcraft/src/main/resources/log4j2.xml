<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %highlight{%-5level}{
    TRACE=blue,
    DEBUG=cyan,
    INFO=green,
    WARN=yellow,
    ERROR=red
} %style{%c{1}}{magenta} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="org.fluxcraft" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
